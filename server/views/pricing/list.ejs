    <script>
      function loadPricing() {
        $.ajax({
          url: "/list-pricing",
          type: "GET",
           xhrFields: {
              withCredentials: true,
            },
          success: function (response) {
            const pricing = response.data;
            const tbody = $("#pricingTableBody");
            tbody.empty(); // clear old rows

            pricing.forEach((item, index) => {
              tbody.append(`
            <tr>
              <td>${index + 1}</td>
              <td>${item.planName}</td>
              <td>${item.description}</td>
              <td>${item.price}</td>
              <td>${item?.features
                .map((val, index) => `<li>${val}</li>`)
                .join(" ")}</td>
                 <td>
                 <button
                  class="btn btn-warning btn-sm edit-btn"
                  data-id="${item._id}"
                  data-toggle="modal"
                  data-target="#editModal"
                >
                  <i class="fas fa-pen"></i>
                </button>
                <button class="btn btn-danger btn-sm delete-btn" data-id="${
                  item._id
                }">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
          `);
            });
          },
          error: function (xhr) {
            $("#flashMessage").html(
              `<div class="alert alert-danger">Error loading Pricing</div>`
            );
          },
        });
      }
      //Delete Function
      $(document).on("click", ".delete-btn", function () {
        const id = $(this).data("id");
        if (confirm("Are you sure you want to delete this plan?")) {
          $.ajax({
            url: `/delete-pricing/${id}`,
            async: true,
            method: "DELETE",
             xhrFields: {
              withCredentials: true,
            },
            success: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-success" role="alert">${response.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
              loadPricing();
            },
            error: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-danger" role="alert">${response?.responseJSON?.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
            },
          });
        }
      });
      // load Service when page loads
      $(document).ready(loadPricing);
    </script>
    <script>
      $(document).ready(function () {
        //Create Function
        $("#pricing-form").submit(function (e) {
          e.preventDefault();
          let formData = new FormData(this);
          $.ajax({
            url: "/add-pricing",
            async: true,
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
             xhrFields: {
              withCredentials: true,
            },
            success: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-success" role="alert">${response.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
              $("#pricing-form")[0].reset();
              loadPricing();
            },
            error: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-danger" role="alert">${response?.responseJSON?.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
              $("#pricing-form")[0].reset();
            },
          });
        });
        //Get Banner Details
        $(document).on("click", ".edit-btn", function () {
          const id = $(this).data("id");
          $("#update-form").attr("data-id", id);
          $.ajax({
            url: `/pricing-details/${id}`,
            async: true,
            method: "GET",
             xhrFields: {
              withCredentials: true,
            },
            success: function (response) {
              const pricing = response.data;
              $("#edit-planName").val(pricing.planName);
              $("#edit-description").val(pricing.description);
              $("#edit-price").val(pricing.price);
              if (pricing?.features.length > 0) {
                pricing.features.map((item, index) => {
                  $("#features-div").append(
                    `<input type="text" class="form-control appended-item my-3" name="features" id="edit-features" value="${item}"/>`
                  );
                });
                if (pricing?.features.length < 5) {
                  for (let i = pricing?.features.length; i < 5; i++) {
                    $("#features-div").append(
                      `<input type="text" class="form-control appended-item my-3" name="features" id="edit-features"/>`
                    );
                  }
                }
              } else {
                $("#features-div").append(
                  `<input type="text" class="form-control appended-item my-3" name="features" id="edit-features"/>` +
                    `<input type="text" class="form-control appended-item my-3" name="features" id="edit-features"/>` +
                    `<input type="text" class="form-control appended-item my-3" name="features" id="edit-features"/>` +
                    `<input type="text" class="form-control appended-item my-3" name="features" id="edit-features"/>` +
                    `<input type="text" class="form-control appended-item my-3" name="features" id="edit-features"/>`
                );
              }
            },
          });
        });
        $("#editModal").on("hidden.bs.modal", function () {
          $("#update-form").removeAttr("data-id")[0].reset();
          $("#features-div .appended-item").remove();
          $("#edit-status").prop("checked", false);
        });
        //Update Pricing
        $("#update-form").submit(function (e) {
          e.preventDefault();
          const id = $("#update-form").attr("data-id");
          let features = [];
          const formData = new FormData(this);
          $("#features-div .appended-item").each(function () {
            const val = $(this).val().trim();
            if (val) features.push(val);
          });
          formData.delete("features");
          features.forEach((f) => formData.append("features", f));
          $.ajax({
            url: `/pricing-update/${id}`,
            async: true,
            data: formData,
            type: "PATCH",
            processData: false,
            contentType: false,
             xhrFields: {
              withCredentials: true,
            },
            success: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-success" role="alert">${response.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
              loadPricing();
            },
            error: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-danger" role="alert">${response?.responseJSON?.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
            },
          });
        });
      });
    </script>
