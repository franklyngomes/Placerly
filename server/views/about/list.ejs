    <script>
      function loadAbout() {
        $.ajax({
          url: "/list-about",
          type: "GET",
          success: function (response) {
            const abouts = response.data;
            const tbody = $("#aboutTableBody");
            tbody.empty(); // clear old rows

            abouts.map((item, index) => {
              tbody.append(`
            <tr>
              <td>${index + 1}</td>
              <td>${item.title}</td>
              <td>${item.descriptionOne}</td>
              <td>${item.descriptionTwo}</td>
              <td>${item.mission}</td>
              <td>${item?.values
                .map((val, index) => `<li>${val}</li>`)
                .join(" ")}</td>
              <td> <img src="https://placerly.onrender.com/${
                item.image
              }" alt="About Image" class="table-data-image" style="width: 100px" /> </td> 
              <td> ${
                item.status === true ? "<p>Active</p>" : "<p>Inactive</p>"
              }</td>
              <td>
                 <button
                  class="btn btn-warning btn-sm edit-btn"
                  data-id="${item._id}"
                  data-toggle="modal"
                  data-target="#editModal"
                >
                  <i class="fas fa-pen"></i>
                </button>
                <button class="btn btn-danger btn-sm delete-btn" data-id="${
                  item._id
                }">
                  <i class="fas fa-trash"></i>
                </button>
              </td>
            </tr>
          `);
            });
          },
          error: function (xhr) {
            $("#flashMessage").html(
              `<div class="alert alert-danger">Error loading about</div>`
            );
          },
        });
      }
      //Delete Function
      $(document).on("click", ".delete-btn", function () {
        const id = $(this).data("id");
        if (confirm("Are you sure you want to delete this about?")) {
          $.ajax({
            url: `/delete-about/${id}`,
            async: true,
            method: "DELETE",
            success: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-success" role="alert">${response.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
              loadAbout();
            },
            error: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-danger" role="alert">${response?.responseJSON?.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
            },
          });
        }
      });
      // load about when page loads
      $(document).ready(loadAbout);
    </script>
    <script>
      $(document).ready(function () {
        //Create Function
        $("#about-form").submit(function (e) {
          e.preventDefault();
          let formData = new FormData(this);
          $.ajax({
            url: "/add-about",
            async: true,
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-success" role="alert">${response.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
              $("#about-form")[0].reset();
              loadAbout();
            },
            error: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-danger" role="alert">${response?.responseJSON?.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
              $("#about-form")[0].reset();
            },
          });
        });
        //Get About Details
        $(document).on("click", ".edit-btn", function () {
          const id = $(this).data("id");
          $("#update-form").attr("data-id", id);
          $.ajax({
            url: `/about-details/${id}`,
            async: true,
            method: "GET",
            success: function (response) {
              const about = response.data;
              $("#edit-title").val(about.title);
              $("#edit-descriptionOne").val(about.descriptionOne);
              $("#edit-descriptionTwo").val(about.descriptionTwo);
              $("#edit-mission").val(about.mission);
              $("#edit-status").prop("checked", about.status === true);
              if (about?.values.length > 0) {
                about.values.map((item, index) => {
                  $("#values-div").append(
                    `<input type="text" class="form-control appended-item my-3" name="values" id="edit-values" value="${item}"/>`
                  );
                });
                if (about?.values.length < 5) {
                  for (let i = about?.values.length; i < 5; i++) {
                    $("#values-div").append(
                      `<input type="text" class="form-control appended-item my-3" name="values" id="edit-values"/>`
                    );
                  }
                }
              } else {
                $("#values-div").append(
                  `<input type="text" class="form-control appended-item my-3" name="values" id="edit-values"/>` +
                    `<input type="text" class="form-control appended-item my-3" name="values" id="edit-values"/>` +
                    `<input type="text" class="form-control appended-item my-3" name="values" id="edit-values"/>` +
                    `<input type="text" class="form-control appended-item my-3" name="values" id="edit-values"/>` +
                    `<input type="text" class="form-control appended-item my-3" name="values" id="edit-values"/>`
                );
              }
            },
          });
        });
        $("#editModal").on("hidden.bs.modal", function () {
          $("#update-form").removeAttr("data-id")[0].reset();
          $("#values-div .appended-item").remove();
          $("#edit-status").prop("checked", false);
        });
        // Update About
        $("#update-form").submit(function (e) {
          e.preventDefault();
          const id = $("#update-form").attr("data-id");
          const formData = new FormData(this);
          let valuesArr = [];
          formData.set("status", $("#edit-status").is(":checked"));
          $("#values-div .appended-item").each(function () {
            const val = $(this).val().trim();
            if (val) valuesArr.push(val);
          });
          formData.delete("values");
          valuesArr.forEach((f) => formData.append("values", f));
          for (let pair of formData.entries()) {
            console.log(pair[0] + ": " + pair[1]);
          }
          $.ajax({
            url: `/about-update/${id}`,
            async: true,
            data: formData,
            type: "PATCH",
            processData: false,
            contentType: false,
            success: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-success" role="alert">${response.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
              loadAbout();
            },
            error: function (response) {
              $("#flashMessage").html(
                `<div class="alert alert-danger" role="alert">${response?.responseJSON?.message}</div>`
              );
              $(".alert")
                .delay(5000)
                .slideUp(200, function () {
                  $(this).alert("close");
                });
            },
          });
        });
      });
    </script>
